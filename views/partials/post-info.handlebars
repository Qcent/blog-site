<article class="article">
    <div class="post-container">
        <div class="post-head"> by {{user.username}} {{format_date created_at}}</div>
        {{#unless view}}
        <a class='post-link' href="/post/{{id}}">
            {{/unless}}
            <section class="post-body">
                <h2 class="title">
                    {{title}}
                </h2>
                <p class="content">
                    {{{post_content}}}
                </p>
            </section>
            {{#unless view}}
        </a>
        {{/unless}}
        <div class="post-foot">
            <img data='{{id}}' class='post-upvote upvote-btn'>{{pos_count}}
            <img data='{{id}}' class='post-downvote downvote-btn'>{{neg_count}}
            |
            <a class='nochange' href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
</article>