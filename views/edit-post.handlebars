<article class='edit-post-container'>
    <section class="post-body">
        <h2 class="title">Edit Post</h2>
        <div class='edit-meta'>
            <img data='{{id}}' class='post-upvote upvote-btn'>{{post.pos_count}}
            <img data='{{id}}' class='post-downvote downvote-btn'>{{post.neg_count}} |
            {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </div>
        <form class="edit-post-form">
            <div>
                <label for="post-title">Title</label>
                <input name="post-title" type="text" value="{{post.title}}" />
            </div>
            <div>
                <label for="post-content">Content</label>
                <textarea id="post-content" name="post-content">{{post.post_content}}</textarea>
            </div>
            <div class="form-btn-container">
                <button type="submit" class='form-btn'>Save post</button>
                <button type="button" class="form-btn delete-post-btn">Delete post</button>
            </div>
        </form>
    </section>
</article>

{{> comment-form}}

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>