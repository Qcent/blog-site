<div class='new-post-container'>
    <section class="post-body">
        <h2 class="title">Create New Post</h2>

        <form class="new-post-form">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="post-title" name="post-title" />
            </div>
            <div>
                <label for="post-content">Content</label>
                <textarea id="post-content" name="post-content"></textarea>
            </div>
            <div class="form-btn-container">
                <button type="submit" class="new-post-btn form-btn">Create</button>
            </div>
        </form>
    </section>
</div>

{{#if posts.length}}
<section id="your-posts">
    <h2 class="section-title">Your Posts</h2>
    {{> sortby}}
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <div class="edit-container">
                <a href="/dashboard/edit/{{post.id}}" class="edit-link nochange">Edit post</a>
            </div>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}
<script>let pageView = 'dashboard/';</script>
<script src="/javascript/add-post.js"></script>
<script src="/javascript/sortby.js"></script>
<script src="/javascript/upvote.js"></script>